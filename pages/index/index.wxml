<!--TAB-->
<view class="tabs">
  <view class="tab active">
    <view class="tabHeader">FEED</view>
  </view>
  <view class="tab" bindtap="goUploads">
    <view class="tabHeader">UPLOADS</view>
  </view>
  <view class="tab" bindtap="goFavorites">
    <view class="tabHeader">FAVOS</view>
  </view>
</view>

<!--LOOP BLOCK FOR PICTURES FEED-->
<block wx:for="{{items}}" wx:for-item="photo">
<!--CARD FOR PICTURE-->
<view class="card">
    <view class="flex-wrp">
      <!-- BODY PART  -->
      <button id="{{index}}" bindtap="changeToPhoto"><image src="{{photo.image_url}}" class="flex-item-pic " style="linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('{{photo.image_url}}')"></image></button>
      <!-- BODY PART  -->
    </view>
</view>
</block>

<!--UPLOAD-->

<view class="upload">
  <view class="btn-medium" bindtap="goAdd">UPLOAD PICTURE</view>
</view>



